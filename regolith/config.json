	"author": "Shapescape",
	"name": "Educator-Tools",
	"packs": {
		"behaviorPack": "./packs/BP",
		"resourcePack": "./packs/RP"
	},
	"regolith": {
		"dataPath": "filters_data",
		"filterDefinitions": {
			/* "shapescape_copy_files": {
				"url": "https://github.com/ShapescapeMC/Shapescape-Copy-Files",
				"version": "1.0.0"
			}, */
			"debug_say_function_name": {
				"url": "github.com/Nusiq/regolith-filters",
				"version": "2.0.0"
			},
			"name_ninja": {
				"url": "github.com/Bedrock-OSS/regolith-filters",
				"version": "1.2.4"
			},
			"system_template": {
				"url": "github.com/Nusiq/regolith-filters",
				"version": "3.12.0"
			},
			"system_template_esbuild": {
				"url": "github.com/Nusiq/regolith-filters",
				"version": "2.1.0"
			},
			"texture_list": {
				"url": "github.com/Bedrock-OSS/regolith-filters",
				"version": "1.1.3"
			}
		},
		"formatVersion": "1.4.0",
		"profiles": {
			"debug": {
				"export": {
					"build": "standard",
					"readOnly": false,
					"target": "development"
				},
				"filters": [
					{
						"profile": "default"
					},
					{
						"filter": "debug_say_function_name",
						"settings": {
							"exclude": [],
							"include": [
								"**/*.mcfunction"
							],
							"prefix": "",
							"random_colors": true
						}
					}
				]
			},
