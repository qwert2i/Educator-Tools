			"default": {
				"export": {
					"build": "education",
					"readOnly": false,
					"target": "development"
				},
				"filters": [
					{
						"filter": "system_template",
						"settings": {
							"log_path": "system_template_log.json",
							"scope": {
								"esbuild_path": "data/system_template_esbuild"
							},
							"scope_path": "scope.json"
						}
					},
					{
						"filter": "system_template_esbuild",
						"settings": {
							"entryPoint": "data/system_template_esbuild/main.ts",
							"external": [
								"@minecraft/server",
								"@minecraft/server-ui"
							],
							"minify": false,
							"outfile": "`BP/scripts/{path_namespace}/main.js`",
							"scope_path": "scope.json"
						}
					},
					{
						"filter": "name_ninja",
						"settings": {
							"blocks": {
								"auto_name": true
							},
							"entities": {
								"auto_name": true
							},
							"items": {
								"auto_name": true
							},
							"spawn_eggs": {
								"auto_name": true,
								"postfix": "",
								"prefix": "§fSpawn §f"
							}
						}
					},
					{
						"filter": "texture_list"
					}
				]
			},
			"packaging": {
				"export": {
					"bpPath": "../behavior_packs/0",
					"readOnly": false,
					"rpPath": "../resource_packs/0",
					"target": "exact"
				},
				"filters": [
					{
						"profile": "default"
					}
				]
			}
		}
	}
}